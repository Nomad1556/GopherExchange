@page
@model ReportModel
@{
    ViewData["Title"] = "Report a listing";
}
<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col mt-5 mb-5">
                <div class="alert alert-success" role="alert">
                    Report submitted successfuly! Thank you for keeping Gopher Exchange safe.
                </div>
            </div>
        </div>
    }
    else
    {
        <h1 class="mt-3 mb-4">Please submit the follow information to report this listing</h1>
        <div class="row">
            <div class="col">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Description">What kind of violation is it?</label>
                        <select class="custom-select" id="incidentType" asp-for="Input.IncidentType">
                            <option>Goucher College Policy violation</option>
                            <option>Contraband</option>
                            <option>Illict services</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Description">Please provide description of violation in 500 words or
                            less</label>
                        <textarea class="form-control" id="description" rows="3" asp-for="Input.Description"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Input.Listingid" value="@Model.Listingid">
                    <button type="submit" class="btn btn-primary">
                        Report
                    </button>
                </form>
            </div>
        </div>
    }
</div>