@page "{listingid: int}"
@model AddToWishlistModel
@{
    ViewData["Title"] = "Add to your Wishlist";
}

<h1 class="mt-3 mb-2"> @ViewData["Title"]</h1>

<h3 class="mt-1 mb-1">Select which wishlist you want addd @Model.listingToAdd.Title to</h3>

<div class="container">
    <div class="card-columns">
        @foreach (GopherExchange.Data.Wishlist w in Model._userwishlist)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@w.Title</h5>
                    <form method="post" type="hidden"></form>
                    <input asp-for="Input.Wishlistid" type="hidden" value="@w.Wishlistid">
                    <input asp-for="Input.ListingId" type="hidden" value="@Model.listingToAdd.Listingid">
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </div>
            </div>
        }
    </div>
</div>